@{
    Layout = null;
}

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("_HeadPartial")
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Login/Index" class="brand-link">
                <img src="~/AdminLTE-3.0.4/dist/img/SVG.png"
                     alt="AdminLTE Logo"
                     class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Giriş Yap</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    
                    <div class="info">
                        <a href="/Default/Index" class="d-block">Admin Paneli</a>
                    </div>
                 
                </div>
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    
                    <div class="info">
                        <a href="/WriterDashboard/Index" class="d-block">Yazar Paneli</a>
                    </div>

                </div>
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                    <div class="info">
                        <a href="/Title/AddTitle" class="d-block">Yeni Başlık Girişi</a>
                    </div>

                </div>
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                    <div class="info">
                        <a href="/Category/AddCategory" class="d-block">Yeni Kategori Girişi</a>
                    </div>

                </div>

                <!-- Sidebar Menu -->
                @await Component.InvokeAsync("_TitleList")
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        @await Component.InvokeAsync("_CommentListByTitle", new{id=ViewBag.i})
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
       
    </div>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>
